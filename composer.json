{
    "name": "shrikeh/teapot",
    "type": "library",
    "description": "PHP HTTP Response Status library",
    "keywords": ["http"],
    "homepage": "http://shrikeh.github.com/teapot",
    "license": "MIT",
    "authors": [
        {
            "name": "Barney Hanlon",
            "email": "barney@shrikeh.net"
        }
    ],
    "require": {
        "php": ">=5.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.3",
        "escapestudios/symfony2-coding-standard": "~2.0"
    },
    "suggest": {
        "fabpot/php-cs-fixer": "^1.11 - For easy CS fixing"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Teapot\\": "src"
        }
    }
}
